<!DOCTYPE html>
<html>
  <head>
    <title>Omni</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container" >
  	 <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       <% if current_user %>
       		<%= current_user.email%>
       		<%= link_to 'logout', destroy_user_session_path, method: :DELETE %>	
       <%else%>
       <%= link_to 'sign_in', new_user_session_path%>
       <%end%>



       <div class="container">
        <div class="row">
          <div class="table-row">
            <div class="container">
            <div class="nav nav-tabs navbar-fixed-top nav_height">

              <li>
                <a href="." class="nav_height">Home</a>
              </li>
              <li>
                <a href="#", class="nav_height">Profile</a>
              </li>
                <li class="dropdown pull-right">
              <%if current_user%>
                   <a href="#" data-toggle="dropdown" class="dropdown-toggle nav_height"><%= current_user.subdomain%><strong class="caret"></strong></a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="<%=edit_user_registration_path%>">Edit account</a>
                  </li>
                  <li>
                    <a href="#">Something else here</a>
                  </li>
                  <li class="divider">
                  </li>
                  
                    <li>
                      <a href="<%=destroy_user_session_path%>", data-method="delete"><b>SignOut</b></a>
                    </li>
                 </ul> 
              <%else%>
                 
                  <ul class="dropdown-menu">
                    <li>
                      <a href="<%=new_user_session_path%>"><b>Log In</b></a>
                    </li>
                 </ul> 
              <%end%>
                <%if current_user%>
                <li class="pull-right">
                <a href="<%=new_tweet_path%>", class="nav_height">New Album</a>
              </li>
                <%else%>
                <li class="pull-right">
                <a href="<%=new_user_session_path%>", class="nav_height">Login</a>
              </li>
              <%end%>
              </li>
            </div>
          
        </div>
      </div>
      </div> 
      </div>   
      <%if notice.present? %>
     <div class="container">
          <div class="col-md-12">
            <nav class="nav nav-tabs notice_alert">
         <p class="notice"><%= notice %></p>
         </nav>
     </div>
         <%elsif alert.present? %>
         <div class="container-fluid">
          <div class="col-md-12">
            <nav class="nav nav-tabs notice_alert">
         <p class="alert"><%= alert %></p>
       </nav>
     </div>
     <%end%>
     <br>
     <br>
     <div class="container" style="margin-top: 70px">
    <%= yield %>
  </body>
</html>
